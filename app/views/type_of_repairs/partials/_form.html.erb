
<div class="modal-body">
  <%= form_for @type_of_repair, remote:true do |f| %>


    <div class="form-group col-xs-12">
      <%= f.text_field :name, class:"form-control", required:true, placeholder:'service name' %>
    </div>

    <div class="form-group col-xs-12">
      <%= f.text_field :desc, class:"form-control", required:true, placeholder:'service desc' %>
    </div>

    <div class="form-group col-xs-12">
      <%= f.number_field :repair_time, step: 0.5, class:"form-control mdb-select md-form block", required:true, placeholder:'service time ( Hour unit)' %>
    </div>

    <div class="form-group col-xs-12">
      <%= f.number_field :price, class:"form-control mdb-select md-form block", required:true, placeholder:'service price (Dollar unit)' %>
    </div>

    <!-- action buttons -->
    <div class="form-group col-xs-12">
        <%= f.submit "submit", class:"btn-success" %>
        <%= link_to 'Close', "#", class: "btn-sm btn-light float-right", data: {dismiss: "modal"} %>
    </div>

  <% end %>
</div>


